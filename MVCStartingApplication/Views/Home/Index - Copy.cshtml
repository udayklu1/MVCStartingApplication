    @{var amounts = new List<decimal> { 100, 10.23m, 434, 19.12m, -200, 340 };}

    <ol>
        @foreach (decimal amount in amounts)
        {
            <li>
                @fnFormatMoney(amount);
            </li>
        }
    </ol>

    @helper fnFormatMoney(Decimal amount)
    {
        var color = "green";
        if (amount < 100)
        {
            color = "red";
        }
        <span style="color:@color">@string.Format("{0:c}", amount)</span>
    }
